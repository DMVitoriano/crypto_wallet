<p style="color: green"><%= notice %></p>

<h1>Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>      
      <th>Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>        
        <td>
          <% if coin.url_image.present? %>
            <%= image_tag coin.url_image, width: 25, height: 25 %>
          <% else %>
            <p>Imagem não disponível</p>
          <% end %>
        </td>
        <td><%= link_to "Detalhes", coin %></td>
        <td><%= link_to "Editar", edit_coin_path(coin) %></td>
        <td><%= link_to "Apagar", coin, method: :delete, data: { confirm: "Tem certeza?" } %></td>
      </tr>
    <% end %>
  </tbody>  
</table>  
<%= link_to "Criar Moeda", new_coin_path %>
<%= link_to "Voltar", root_path %>


