<p style="color: green"><%= notice %></p>

<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Acronimo</th>      
      <th>Url Imagem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= coin.url_image %></td>
        <td><%= link_to "Detalhes", coin %></td>
        <td><%= link_to "Editar", edit_coin_path(coin) %></td>
        <td><%= link_to "Apagar", coin, method: :delete, data: { confirm: "Tem certeza?" } %></td>
      </tr>
    <% end %>
  </tbody>  
</table>  


